{
    "openapi": "3.0.0",
    "info": {
      "title": "Simple API with Swagger",
      "version": "1.0.0",
      "description": "A simple API with Swagger integration"
    },
    "paths": {
      "/api/products": {
        "get": {
          "summary": "Get all products",
          "responses": {
            "200": {
              "description": "Successful operation",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "name": { "type": "string" },
                        "price": { "type": "number" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  